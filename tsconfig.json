{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler", // Change to "node" if not using an experimental setup
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Recommended for React 17+ with Next.js
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": ".", // Optional but useful for root-relative imports
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
